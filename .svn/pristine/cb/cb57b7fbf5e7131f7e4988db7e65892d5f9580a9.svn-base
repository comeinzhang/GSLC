
*{margin: 0; padding: 0;}
body{background-color:#f0eff5; color:#444; font-family: "Microsoft YaHei",Arial,Helvetica,sans-serif; font-size: 15px; }
html { -webkit-text-size-adjust: none; }
img, input, select { vertical-align: middle; }
h1, h2, h3, h4, h5, h6 { font-weight:normal; font-size: 14px; }
ol, ul { list-style-type:none; }
table { border-collapse:collapse; border-spacing:0; }
th,caption { text-align:left; }
a img { border:0 none; cursor:pointer; }
fieldset,img { border:0 none; }
a, input { outline:0 none; }
a:link, a:visited { text-decoration:none; }
a, div, p, span, li, input{-webkit-tap-highlight-color: rgba(0,0,0,0);  -webkit-focus-ring-color: rgba(0, 0, 0, 0); -moz-tap-highlight-color: rgba(0,0,0,0); -moz-focus-ring-color: rgba(0, 0, 0, 0);  }
input[type="submit"],input[type="button"],input[type="text"],textarea,input[type="password"],input[type="tel"]{-webkit-appearance:none}
a{ color:#444;}

.tab{
    background: white;
    position: fixed;
    width: 100%;
    -webkit-align-self: center;
    align-self: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-lines: single;
    -moz-box-lines: single;
    -webkit-flex-wrap: nowrap;
    flex-wrap: nowrap;
     left: 0; top: 0;
    z-index: 999;

}
.tab .tab-link{
     text-align: center;
    font-size: 16px;
    width: 100%;
    height: 50px;
    line-height: 50px;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    border: 0;
    border-bottom: 2px solid transparent;
    border-radius: 0;
}
.tab .active{
    color: #E73C67;
}
.tab-content{ margin-top: 50px;}
.tab-content .c-1 .link{border-bottom: 1px #ccc solid; background: #ffffff; margin-bottom: 20px;}
.tab-content .c-1 .link .img{
    display: block;
    position: relative;
    min-height: 100px;
}
.tab-content .c-1 .link .img img{ width: 100%; }
.tab-content .c-1 .link .img .msg{ position: absolute;; left: 15px; top: 0;  width:150px;
    height:68px; padding-top: 8px; color: #ffffff;
    background: #406FD5; font-size: 13px; text-align: center;

}
.tab-content .c-1 .link .img .msg .m-na{ font-size: 16px;}
.tab-content .c-1 .link .img .x{ display: inline-block; padding: 3px 5px; background: #406FD5; color: #ffffff; position: absolute; top: 15px; right: 15px; }
.tab-content .c-1 .link .name{ height: 40px; line-height: 40px; padding: 0 15px; position: relative; }
.tab-content .c-1 .link .name a{ line-height: 40px; position: absolute; right: 15px; top:0;}
.tab-content .c-1 .link .name a  i{ transition: all 0.3s; }
.tab-content .c-1 .link .name a:active{ color: #E73C67 }
.tab-content .c-1 .link .name a:active i{ transform: scale(1.5) }


/*loading动画*/
.spinner {
    width: 150px;
    text-align: center;
    margin: 0 auto;
}
.spinner > div {
    width: 30px;
    height: 30px;
    background-color: #ccc;

    border-radius: 100%;
    display: inline-block;
    -webkit-animation: bouncedelay 1.4s infinite ease-in-out;
    animation: bouncedelay 1.4s infinite ease-in-out;
    /* Prevent first frame from flickering when animation starts */
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
}

.spinner .bounce1 {
    -webkit-animation-delay: -0.32s;
    animation-delay: -0.32s;
}

.spinner .bounce2 {
    -webkit-animation-delay: -0.16s;
    animation-delay: -0.16s;
}

@-webkit-keyframes bouncedelay {
    0%, 80%, 100% { -webkit-transform: scale(0.0) }
    40% { -webkit-transform: scale(1.0) }
}

@keyframes bouncedelay {
    0%, 80%, 100% {
        transform: scale(0.0);
        -webkit-transform: scale(0.0);
    } 40% {
          transform: scale(1.0);
          -webkit-transform: scale(1.0);
      }
}








