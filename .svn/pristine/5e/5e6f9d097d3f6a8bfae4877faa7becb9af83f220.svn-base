
*{margin: 0; padding: 0;}
body{background-color:#f0eff5; color:#444; font-family: "Microsoft YaHei",Arial,Helvetica,sans-serif; font-size: 15px; }
html { -webkit-text-size-adjust: none; }
img, input, select { vertical-align: middle; }
h1, h2, h3, h4, h5, h6 { font-weight:normal; font-size: 14px; }
ol, ul { list-style-type:none; }
table { border-collapse:collapse; border-spacing:0; }
th,caption { text-align:left; }
a img { border:0 none; cursor:pointer; }
fieldset,img { border:0 none; }
a, input { outline:0 none; }
a:link, a:visited { text-decoration:none; }
a, div, p, span, li, input{-webkit-tap-highlight-color: rgba(0,0,0,0);  -webkit-focus-ring-color: rgba(0, 0, 0, 0); -moz-tap-highlight-color: rgba(0,0,0,0); -moz-focus-ring-color: rgba(0, 0, 0, 0);  }
input[type="submit"],input[type="button"],input[type="text"],textarea,input[type="password"],input[type="tel"]{-webkit-appearance:none}
a{ color:#444;}
.clearfix:after{    content: "020";    display: block;    height: 0;    clear: both;    visibility: hidden;}
.clearfix { /* 触发 hasLayout */    zoom: 1;}
.tab{
    background: white;
    position: relative;
    -webkit-align-self: center;
    align-self: center;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-lines: single;
    -moz-box-lines: single;
    -webkit-flex-wrap: nowrap;
    flex-wrap: nowrap;

}
.tab .tab-link{
     text-align: center;
    font-size: 16px;
    width: 100%;
    height: 40px;
    line-height: 40px;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    border: 0;
    border-bottom: 2px solid transparent;
    border-radius: 0;
}
.tab .active{
    color: #E73C67;
}
.tab-content .c-1 .link{border-bottom: 1px #ccc solid; background: #ffffff; margin-bottom: 20px;}
.tab-content .c-1 .link .img{
    display: block;
    position: relative;
}
.tab-content .c-1 .link .title{ line-height: 40px; position: relative;}
.tab-content .c-1 .link .title .v-name{ font-size: 16px; margin-left: 15px; }
.tab-content .c-1 .link .title .r-a{ position: absolute; right: 15px; top: 0; color: #999999; }
.tab-content .c-1 .link .title { font-size: 16px; }
.tab-content .c-1 .link .img img{ width: 100%; }
.tab-content .c-1 .link .img p{ display: inline-block; padding: 3px 5px; background: #406FD5; color: #ffffff; position: absolute; top: 15px; right: 15px; }
.tab-content .c-1 .link .name{ padding: 15px; position: relative; }
.tab-content .c-1 .link .name .pic{ width: 60px; height: 60px; border-radius: 50%; overflow: hidden; float: left; margin-right: 10px; }
.tab-content .c-1 .link .name .pic img{ width: 100%; }
.tab-content .c-1 .link .name .p1{ margin-top: 12px; }
.tab-content .c-1 .link .name .p2{ font-size: 12px; color: #999999; }
.v-time-block .row{ background: #FFFFFF;}
.v-time-block .row2{ background: none!important;}
.v-time-block .row p{ width: 33.3%; float: left; line-height: 35px; font-size: 16px; text-align: center;}










