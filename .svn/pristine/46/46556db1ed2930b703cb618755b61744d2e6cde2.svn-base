@charset "utf-8";
.button{ height: 45px; display: block; line-height: 45px; text-align: center; color: #FFFFFF; background: #c40000;
font-size: 16px; border-radius: 5px;}
.button:active{ background: #ff0000;}
.login-index{ padding: 60px 30px 30px 30px;}
.login-index .user-pic{ height: 100px; width: 100px; margin: 30px auto; border-radius: 50%; overflow: hidden;  }
.login-index .user-pic img{ height: 100px; }
.ip-list .row{ min-height: 45px;border-bottom: 1px #999 solid; position: relative;}
.ip-list .row input{ border: none; background: none; line-height: 1; height: 45px; display: inline-block; width: 100%; font-size: 14px;}
.ip-list .row .s1{ width: 35px; line-height: 20px; height: 20px; position: absolute; left: 0; top: 13px; border-right: 1px #999 solid; }
.ip-list .row .p1{ margin-left:40px;  }
.ip-list .row .s2{  display: block;  position: absolute;  top: 10px; right: 10px; padding: 3px 5px; border: 1px #c40000 solid;  border-radius: 6px;
color: #c40000;}
.ip-list .login-btn{ margin-top: 30px;}
.ip-list .login-btn .p2{ margin-top: 10px; font-size: 14px; line-height: 20px; position: relative;}
.ip-list .login-btn .p2 .a2{ position: absolute; right: 0; top: 0; }
.login-index .dsfdl{ margin-top: 50px; color: #999999; text-align: center;}
.login-index .dsfdl .p1{ line-height: 25px; position: relative; font-size: 16px; }
.login-index .dsfdl .p1:after{ display: block; content: ''; width: 50px; height: 1px; border-top: 1px #999999 solid;
 position: absolute; left: 50%; margin-left: 50px; top: 13px;}
.login-index .dsfdl .p1:before{ display: block; content: ''; width: 50px; height: 1px; border-top: 1px #999999 solid;
 position: absolute; right: 50%; margin-right: 50px; top: 13px;}

.login-index .dsfdl img{ width: 45px; margin-top: 20px; }

.login-index .row-ghxy{ margin-top: 15px;}
.login-index .row-ghxy i{ font-size: 14px;}






























