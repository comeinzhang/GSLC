.slide{
    position: relative;
    overflow: hidden;
    margin: 0 auto;
}
.slide:after{
    content: '';
    display: block;
    width: 100%;
    padding-top: 100%;/*图片比例宽1:0.33.*/

}

.slide ul{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
}
.slide li{
    list-style: none;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: auto;
}

.slide li:first-child{
    z-index: 1;
}
.slide li  img{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    border: none;
    height: auto;
    text-align: center;
}

.slide .dot{
     width: 100%;
    position: absolute;
    bottom: 10px;
    font-size: 0;
     text-align: center;
}
.slide .dot span{
    display: inline-block;
    width: 5px;
    height: 5px;
    margin-left: 5px;
    border: 1px solid #FEDE64;
    border-radius: 50%;
}
.slide .dot .cur{
    background-color: #FEDE64;
}