@charset "utf-8";
html{-webkit-tap-highlight-color: rgba(0,0,0,0);-webkit-text-size-adjust: 100%;-ms-text-size-adjust: 100%;-ms-overflow-style: -ms-autohiding-scrollbar;}
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td{margin:0;padding:0;}
table{border-collapse:collapse;border-spacing:0;}
fieldset,img{border:0;}
address,caption,cite,code,dfn,em,strong,th,var{font-style:normal;font-weight:normal;}
li{list-style:none;}
caption,th{text-align:left;}
h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}
q:before,q:after{content:'';}
abbr,acronym{border:0;font-variant:normal;}
input,textarea,select{font-family:inherit;font-size:inherit;font-weight:inherit;}
input,textarea,select{font-size:100%;}
legend{color:#000;}
header,footer,nav{display: block;}
::-moz-selection{background:#b79a56; color:#fff;}
::selection {background:#b79a56; color:#fff;}
html,body{background:#fff;}
body{ font-family: "Microsoft YaHei", Arial, Helvetica, sans-serif; font-size: 14px; color: #666666; background: #f9f9f9; }
i{font-style:normal;}
a{text-decoration: none;color: #666;border: 0;font-size: 100%;margin: 0;padding: 0;}
a:hover{color: #ff1600;}

.clear:after{clear: both;content:'';display: block;visibility:hidden;height:0;}
.clear{zoom:1;}
.header{ z-index: 3; background: #FFFFFF; border-bottom: 1px #d7d7d7 solid; font-size: 16px;}
.header .nav a{ display: block; float: left; width: 25%; padding: 15px 0; text-align: center;}
.header .nav a span{ display: block; border-right: 1px #d7d7d7 solid;  }
.header .nav .active span{ color: #ff1600;  }

.jobs { border: 1px #eee solid; background: #FFFFFF; }
.job-list{ font-size: 18px; border-bottom: 1px #eee solid;}
.job-list li{ line-height: 50px; width: 33.3%; float: left; text-align: center;}
.job-list li.active { background: #575757; color: #FFFFFF; }

.job-detail { padding: 0 10px; text-align: left; color: #333; }
.job-detail li { list-style: none; display: none; }
.job-detail .title { height: 73px; line-height: 73px; font-size: 16px; border-bottom: 1px solid #eee; }
.job-detail .content { padding: 20px 10px; line-height: 1.8em; font-size: 14px; min-height: 400px; overflow: auto; }
.job-detail .content::-webkit-scrollbar { background: #e7e7e7; width: 5px; }
.job-detail .content::-webkit-scrollbar-thumb { background: #575757; border-radius: 5px; }
.job-detail .content .item { margin-bottom: 30px; }
.job-detail .content .item2 p{ padding-left: 15px; border-left: 1px #575757 solid; position: relative;z-index: 1; }
.job-detail .content .item2 p:before{ content: ''; display: block; width: 10px; height: 10px;  border: 1px #575757 solid; border-radius: 50%; position: absolute;
left: -6px; top: 8px; z-index: 2; background: #FFFFFF;}
.job-detail .content a { color: #575757; margin: 0 2px; }


.footer { font-size: 12px; color: #fff; background: #333333; line-height: 19px; padding: 5px 15px; text-align: center;}
.footer span { }
.footer a { color: #ccc; vertical-align: middle; margin: 0 10px; }
